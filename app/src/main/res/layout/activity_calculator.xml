<?xml version="1.0" encoding="utf-8" ?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        tools:context="com.borop.calculator.Calculator">

        <TextView
            android:id="@+id/infoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/editText"
            android:layout_marginTop="36dp"
            android:textAlignment="textEnd"
            android:textColor="@color/ButtonColor"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/infoTextView"
            android:layout_marginTop="85dp"
            android:enabled="false"
            android:gravity="bottom"
            android:lines="2"
            android:maxLines="2"
            android:textAlignment="textEnd"
            android:textColor="@color/ButtonColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonSeven"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/buttonEight"
            android:layout_alignBottom="@+id/buttonEight"
            android:layout_alignStart="@+id/buttonClear"
            android:background="@color/colorPrimary"
            android:text="7"
            android:textColor="@color/ButtonColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonEight"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonFive"
            android:layout_toEndOf="@+id/buttonSeven"
            android:background="@color/colorPrimary"
            android:text="8"
            android:textColor="@color/ButtonColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonNine"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/buttonEight"
            android:layout_alignBottom="@+id/buttonEight"
            android:layout_toEndOf="@+id/buttonEight"
            android:background="@color/colorPrimary"
            android:text="9"
            android:textColor="@color/ButtonColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonFour"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonOne"
            android:layout_alignStart="@+id/buttonSeven"
            android:background="@color/colorPrimary"
            android:text="4"
            android:textColor="@color/ButtonColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonFive"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/buttonFour"
            android:layout_alignBottom="@+id/buttonFour"
            android:layout_toEndOf="@+id/buttonFour"
            android:background="@color/colorPrimary"
            android:text="5"
            android:textColor="@color/ButtonColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonSix"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/buttonFive"
            android:layout_alignBottom="@+id/buttonFive"
            android:layout_alignStart="@+id/buttonThree"
            android:background="@color/colorPrimary"
            android:text="6"
            android:textColor="@color/ButtonColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonOne"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonZero"
            android:layout_alignEnd="@+id/buttonFour"
            android:background="@color/colorPrimary"
            android:text="1"
            android:textColor="@color/ButtonColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonTwo"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/buttonOne"
            android:layout_alignBottom="@+id/buttonOne"
            android:layout_toEndOf="@+id/buttonOne"
            android:background="@color/colorPrimary"
            android:text="2"
            android:textColor="@color/ButtonColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonThree"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonDot"
            android:layout_toEndOf="@+id/buttonTwo"
            android:background="@color/colorPrimary"
            android:text="3"
            android:textColor="@color/ButtonColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonDot"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/buttonZero"
            android:layout_alignBottom="@+id/buttonZero"
            android:layout_toEndOf="@+id/buttonZero"
            android:background="@color/colorPrimary"
            android:text="."
            android:textColor="@color/ButtonColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonZero"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/buttonOne"
            android:background="@color/colorPrimary"
            android:text="0"
            android:textColor="@color/ButtonColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonEqual"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonAdd"
            android:layout_below="@+id/buttonThree"
            android:layout_toEndOf="@+id/buttonThree"
            android:background="@color/OrangeButton"
            android:text="="
            android:textColor="@color/ButtonColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonDivide"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonNine"
            android:layout_alignEnd="@+id/editText"
            android:layout_toEndOf="@+id/buttonNine"
            android:background="@color/OrangeButton"
            android:text="/"
            android:textColor="@color/ButtonColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonMultiply"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonDivide"
            android:layout_below="@+id/buttonDivide"
            android:layout_toEndOf="@+id/buttonNine"
            android:background="@color/OrangeButton"
            android:text="*"
            android:textColor="@color/ButtonColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonSubtract"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/buttonSix"
            android:layout_alignBottom="@+id/buttonSix"
            android:layout_alignEnd="@+id/buttonMultiply"
            android:layout_toEndOf="@+id/buttonNine"
            android:background="@color/OrangeButton"
            android:text="-"
            android:textColor="@color/ButtonColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonAdd"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonSubtract"
            android:layout_below="@+id/buttonSubtract"
            android:layout_toEndOf="@+id/buttonSix"
            android:background="@color/OrangeButton"
            android:text="+"
            android:textColor="@color/ButtonColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonClear"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonSeven"
            android:layout_alignStart="@+id/editText"
            android:background="@color/ClearColor"
            android:text="Clear"
            android:textColor="@color/ButtonColor"
            android:textSize="20sp" />
    </RelativeLayout>
</layout>